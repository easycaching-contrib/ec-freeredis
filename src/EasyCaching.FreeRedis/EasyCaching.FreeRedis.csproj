<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
		<Description>
			A simple distributed caching provider based on freeredis.
		</Description>
		<PackageTags>Redis,DistributedCache,Caching,Cache</PackageTags>

		<PackageReleaseNotes>
			$(EasyCachingFreeRedisPackageNotes)
		</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="FreeRedis" Version="$(FreeRedisPackageVersion)" />
		<PackageReference Include="EasyCaching.Core" Version="$(EasyCachingCorePackageVersion)" />
	</ItemGroup>
	
	<ItemGroup>
		<None Include="..\..\media\nuget-icon.png" Pack="true" Visible="false" PackagePath="" />
	</ItemGroup>

</Project>
